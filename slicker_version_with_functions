        if(currentPlayer == 1)
        {
            currentPlayer = 2;
            playerPiece = 'o';
        }
        else
        {
            currentPlayer = 1;
            playerPiece = 'x';
        }

               if (board[0][0] != '-' && board[0][1] != '-' && board[0][2] != '-' && board[0][3] != '-' &&
            board[0][4] != '-' && board[0][5] != '-' && board[0][6] != '-')
        {

            cout << "BOARD FULL" << endl;
